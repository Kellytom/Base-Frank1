<script>
// Hamburger menu toggle (vanilla JS)
document.addEventListener('DOMContentLoaded', function() {
  const hamburger = document.getElementById('hamburger-btn');
  const menu = document.getElementById('main-menu');
  if (hamburger && menu) {
    hamburger.addEventListener('click', function(e) {
      // Only toggle main menu, not submenus
      const isOpen = menu.classList.toggle('menu-open');
      hamburger.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      // On mobile, close all submenus when menu is opened
      if (isMobile()) {
        document.querySelectorAll('.dropdown.open').forEach(function(el) {
          el.classList.remove('open');
        });
      }
    });
  }
  // Light/Dark/Sunset mode switcher
  const modeSelect = document.querySelector('.mode-select');
  function setTheme(theme) {
    document.body.setAttribute('data-theme', theme);
  }
  if (modeSelect) {
    modeSelect.addEventListener('change', function(e) {
      const target = e.target;
      if (target) setTheme(target.value);
    });
    // Set initial theme
    if (modeSelect.value) {
      setTheme(modeSelect.value);
    }
  }
  // Mobile/Desktop submenu toggle
  function isMobile() {
    return window.innerWidth <= 800;
  }
  function closeAllDropdowns() {
    document.querySelectorAll('.dropdown.open').forEach(function(el) {
      el.classList.remove('open');
    });
  }
  const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
  dropdownToggles.forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const parent = btn.parentElement;
      if (parent && parent.classList.contains('open')) {
        parent.classList.remove('open');
      } else if (parent) {
        closeAllDropdowns();
        parent.classList.add('open');
      }
    });
  });
  // Close dropdowns when clicking outside (desktop only)
  document.addEventListener('click', function(e) {
    if (!isMobile()) {
      const isDropdown = e.target.closest('.dropdown');
      const isToggle = e.target.closest('.dropdown-toggle');
      if (!isDropdown && !isToggle) {
        closeAllDropdowns();
      }
    }
  });
  // Optional: close dropdowns when resizing to desktop
  window.addEventListener('resize', function() {
    if (!isMobile()) closeAllDropdowns();
  });
});
</script>
